package example;

public class LoopsDemo {
	public static void main(String[] args) {
		// for loop
		int counter = 0;
		for(int i = 1; i <= 10; i++) {
			counter = counter + 2;
			System.out.println("Counter: "+counter);
		}
		System.out.println("--------------End of For---------------------");
		// while loop
		int loopCounter = 10;
		while(loopCounter > 1) {
			System.out.println("Loop counter: "+loopCounter);
			loopCounter = loopCounter - 3;
		}
		System.out.println("---------------End of While---------------------");
		// do while loop
		do {
			System.out.println("Loop counter: "+loopCounter);
			loopCounter = loopCounter - 3;
		} while(loopCounter > 1);
		System.out.println("---------------End of Do While---------------------");
	}
}
